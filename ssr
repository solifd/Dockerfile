FROM alpine



ENV TERM=linux \
	DATA_DIR=/data/shadowsocks

RUN set -x && \
	apk --update --no-cache upgrade && \
	apk --update --no-cache add python git iproute2 build-base tar curl && \
	mkdir /tmp/libsodium && \
	curl -Lk https://github.com/jedisct1/libsodium/releases/download/1.0.12/libsodium-1.0.12.tar.gz|tar xz -C /tmp/libsodium --strip-components=1 && \
	cd /tmp/libsodium && \
	./configure && \
	make -j $(awk '/processor/{i++}END{print i}' /proc/cpuinfo) && \
	make install && \
	#ldconfig && \
	curl -Lk https://bootstrap.pypa.io/get-pip.py | python && \
	pip install cymysql && \
	[ ! -d $(dirname ${DATA_DIR}) ] && mkdir -p $(dirname ${DATA_DIR}) && cd $(dirname ${DATA_DIR}) && \
	git clone -b manyuser https://github.com/breakwa11/shadowsocks.git && \
	#cd shadowsocks && \
	#cp config.json user-config.json && \
	apk --no-cache del build-base && \
	rm -rf /var/cache/apk/* ~/.cache /tmp/libsodium
RUN curl "https://raw.githubusercontent.com/solifd/Dockerfile/master/entrypoint.sh" -o  /entrypoint.sh

WORKDIR ${DATA_DIR}
VOLUME [${DATA_DIR}]
EXPOSE 8000-10020
#ADD entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh
ENTRYPOINT ["/entrypoint.sh"]
