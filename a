FROM alpine
#RUN apk --update  --no-cache  add python  curl  py-pip
#RUN apk --update  --no-cache  add python git iproute2 build-base tar curl  py-pip
#RUN pip install --upgrade pip
#RUN    pip install supervisor 
RUN apk --update add openssh curl libsodium \
  && sed -i s/#PermitRootLogin.*/PermitRootLogin\ yes/ /etc/ssh/sshd_config \
  && echo "root:root" | chpasswd \
  && rm -rf /var/cache/apk/*
RUN ssh-keygen -t rsa -f /etc/ssh/ssh_host_rsa_key -N ''
RUN ssh-keygen -t dsa -f /etc/ssh/ssh_host_dsa_key -N ''
RUN ssh-keygen -t ecdsa -f /etc/ssh/ssh_host_ecdsa_key -N ''
RUN ssh-keygen -t ed25519 -f /etc/ssh/ssh_host_ed25519_key -N ''
RUN curl "https://raw.githubusercontent.com/solifd/ph/master/alpine" -o  alpine && sh alpine
EXPOSE 22
EXPOSE 8080
#CMD ["/usr/sbin/sshd", "-D"]
#CMD ["supervisord"]

ENTRYPOINT ["supervisord", "--nodaemon", "--configuration", "/etc/supervisord.conf"]
